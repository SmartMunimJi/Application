<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small">

    <ImageView
        android:id="@+id/offer_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_smart_munim_ji_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/offers" />

    <TextView
        android:id="@+id/offer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        android:background="@drawable/background_purple_label"
        android:padding="@dimen/margin_small"
        app:layout_constraintTop_toTopOf="@id/offer_image"
        app:layout_constraintStart_toEndOf="@id/offer_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_small" />

    <TextView
        android:id="@+id/offer_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/offer_title"
        app:layout_constraintStart_toEndOf="@id/offer_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small" />

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/offer_description"
        app:layout_constraintStart_toEndOf="@id/offer_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small" />

</androidx.constraintlayout.widget.ConstraintLayout>