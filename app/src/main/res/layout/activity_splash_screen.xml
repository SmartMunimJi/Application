<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <!-- Icon in the Center -->
    <ImageView
        android:id="@+id/splash_icon"
        android:layout_width="500sp"
        android:layout_height="500sp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon"
        android:visibility="invisible" />

    <!-- App Name Below Icon -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Smart Munim Ji"
        android:textColor="#F8CC00"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColorHighlight="@android:color/holo_purple"
        android:visibility="invisible" />

    <!-- Horizontal Words Below App Name -->
    <LinearLayout
        android:id="@+id/words_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/word_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Store"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/word_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Verify"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/word_trust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trust"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>