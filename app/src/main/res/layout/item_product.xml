<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/purchase_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <TextView
        android:id="@+id/warranty_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/purchase_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <TextView
        android:id="@+id/warranty_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toBottomOf="@id/warranty_end_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <Button
        android:id="@+id/claim_warranty_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/claim_warranty"
        android:backgroundTint="@color/purple_label"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/warranty_status"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

</androidx.constraintlayout.widget.ConstraintLayout>