<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <TextView
            android:id="@+id/claim_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:text="Claim ID: #123"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Product: Smartwatch 2.0"/>

        <TextView
            android:id="@+id/issue_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Issue: Device stopped charging after 3 months, possibly battery issue."/>

        <TextView
            android:id="@+id/claimed_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Claimed: Aug 09, 2025 10:00 AM"
            android:layout_marginTop="@dimen/margin_small"/>

        <TextView
            android:id="@+id/claim_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Status: REQUESTED"
            android:textColor="@color/purple_label"/>

        <TextView
            android:id="@+id/seller_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Seller Notes: Please visit our service center."
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>